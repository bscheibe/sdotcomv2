<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/Blog" lang="en">
	<head>
		<% include ../meta %>
		<% include ../stylesheets %>
	</head>

	<body>
		<% include ../header %> <!-- The top bar for the site -->
		<div class="blog-post">	
			<section class="section grey section-xlarge">
				<div class="background-media">
					<% if (image == "default") { %>
						<img src="/images/blog/default.png" class="bg blur">
					<% } else if (image != "none") { %>
						<img src="<%= image %>" class="bg">
					<% } %>
				</div>
				<div class="background-overlay blog">
				</div>

				<div class="container">
					<div class="row">
						<div class="col-md-8 center">
							<header class="section-header blog text-left">
								<h1 class="blog-title"><%= title %></h1>
								<p class="author"><%= author.name %></p>
								<p class="date"><%= date %></p>
							</header>
						</div>
					</div>
				</div>
			</section>
			<article class="page">
				<section class="section white section-normal has-top">
					<div class="background-media"></div>
					<div class="background-overlay"></div>
					<div class="container">
						<div class="row">
							<div class="col-md-8 text-default center">
								<div class="blog-content">
									<% include url %>
								</div>
								<%if (banner != false) { %>
									<a href="#">
										<img src="/images/<%= bannerURL %>">
									</a>
								<% } %>
								<% if (bioOn != false) { %>
									<div class="footer row">
										<div class="col-md-2">
											<div class="box-round box-huge">
												<div class="box-dummy"></div>
												<div class="box-inner">
													<img src="/images/<%= author.profile_img %>">
												</div>
											</div>
										</div>
										<div class="col-md-10">
											<p class="author"><%= author.name %></p>
											<p class="bio"><%= author.bio %></p>
										</div>
									</div>
								<% } %>
								<div class="row xsmall-margin-bottom small-margin-top">
									<div class="col-md-4">
										<a href="/" class="btn btn-primary btn-lg btn-icon-left" title="Home Page">
											Home Page
											<div class="hex-alt hex-alt-big">
												<span class="glyphicon glyphicon-home"></span>
											</div>
										</a>
									</div>
									<div class="col-md-4 social-shares">
										<a title="Share On Facebook" target="_blank" onclick="
											return !window.open(this.href, 'Facebook', 'width=640,height=300')" href="http://www.facebook.com/sharer/sharer.php?u=http://roadmunk.com/blog/<%= url %>">
											<span class="icon-facebook"></span>
										</a>
										<a title="Share On Twitter" onclick="
											return !window.open(this.href, 'Twitter', 'width=640,height=300')" href="
											https://twitter.com/share?url=http://roadmunk.com/blog/<%= url %>&text=<%= title %>">
											<span class="icon-twitter"></span>
										</a>
										<a title="Share On Linked In" target="_blank" onclick="
											return !window.open(this.href, 'Linked In', 'width=640,height=500')"
										href="http://www.linkedin.com/shareArticle?mini=true
										&url=http://roadmunk.com/blog/<%= url %>
										&title=<%= title %>
										&summary=<%= description %>
										&source=roadmunk.com">
											<span class="icon-linkedin"></span>
										</a>
										<a title="Share On Google Plus" target="_blank" onclick="
											return !window.open(this.href, 'Google Plus', 'width=640,height=500')" href="https://plus.google.com/share?url=www.roadmunk.com/blog/<%= url %>">
											<span class="icon-googleplus"></span>
										</a>
									</div>
									<% if (id != 1) { %>
										<div class="col-md-4">
											<a href="/blog/<%= nextBlog %>" class="btn btn-primary btn-lg btn-icon-right right" title="Home Page">
												Next Blog
												<div class="hex-alt hex-alt-big">
													<span class="glyphicon glyphicon-chevron-right"></span>
												</div>
											</a>
										</div>
									<% } %>
								</div>
								<% include ../disqus-script %>
							</div>
						</div>
					</div>
				</section>
			</article>
		</div>
		<% include ../go-top %> <!-- includes the content variable layout -->

		<% include ../footer %> <!-- The footer for the site -->
	</body>

	<% include ../scripts %> <!-- The javascript needed by the site -->

</html>